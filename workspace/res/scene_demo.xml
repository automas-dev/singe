<?xml version="1.0" encoding="UTF-8"?>

<scene name="workspace">

    <!-- Cameras -->

    <cameras>
        <camera name="fpv_camera">
            <pose>5 2 5 0.2 -0.75 0</pose>
            <projection>
                <mode>perspective</mode>
                <fov>70</fov>
                <znear>0.01</znear>
                <zfar>1000</zfar>
            </projection>
        </camera>
    </cameras>

    <camera name="fpv_camera_1" ref="fpv_camera" />

    <camera name="fpv_camera_2" ref="fpv_camera">
        <projection>
            <fov>80</fov>
        </projection>
    </camera>

    <camera name="fpv_camera_3">
        <pose>5 2 5 0.2 -0.75 0</pose>
        <projection>
            <mode>perspective</mode>
            <fov>70</fov>
            <near>0.01</near>
            <far>1000</far>
        </projection>
    </camera>

    <!-- Shaders -->

    <shaders>
        <shader name="default" type="mvp" />

        <shader name="light" type="mvp">
            <uniform name="mvp" type="mat4" />
            <uniform name="lightDir" type="vec3">0 0 -1</uniform>
            <uniform name="lightPos" type="vec3">0 0 0</uniform>
            <uniform name="gamma" type="float">0.2</uniform>
        </shader>
    </shaders>

    <!-- Material -->

    <materials>
        <!-- TODO: Materials -->
        <material name="mat">
            <shader ref="default" />
        </material>
    </materials>

    <!-- Mesh -->

    <models>
        <model name="sphere">
            <mesh name="sphere" />
            <shader ref="light" />
            <!-- <material ref="mat" /> -->
        </model>

        <model name="plane">
            <mesh name="plane" />
            <shader ref="light" />
        </model>

        <model name="cube">
            <mesh name="cube" />
            <shader ref="light" />
        </model>

        <model name="human">
            <mesh name="human" />
            <shader ref="light" />
        </model>
    </models>

    <!-- Grid -->

    <grids>
        <grid name="small">
            <size>3</size>
            <color>1 1 1 1</color>
        </grid>
    </grids>

    <grid>
        <size>10</size>
        <color>0.5 0.5 0.5 1</color>
    </grid>

    <!-- Scene -->

    <model ref="plane" />

    <scene name="sphere">
        <transform>
            <position>0 1 0</position>
        </transform>

        <grid ref="small" />

        <model ref="sphere">
            <transform>
                <position>0 0 0</position>
            </transform>
        </model>
    </scene>

    <scene name="cube">
        <transform>
            <position>0 1 3</position>
        </transform>

        <model ref="cube" />
    </scene>

    <scene name="fountain">
        <transform>
            <position>2 0 -3</position>
        </transform>

        <model name="fountain">
            <mesh name="fountain" />
            <shader ref="light" />
        </model>
    </scene>

    <scene name="human">
        <transform>
            <position>-2 0 -3</position>
        </transform>

        <model ref="Human" />
    </scene>
</scene>